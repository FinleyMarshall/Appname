<%- include('partials/header'); %> 
<div class="h-100 d-flex justify-content-center align-items-center bg-dark">
    <div class="login-box p-5 text-center border">
        <i class="fas fa-user-plus fa-2x"></i>
        <h1 class="d-inline-block">Sign Up</h1>

        <% if (locals.errors && locals.errors.register) { %>
            <div class="generic-errors row justify-content-md-center py-0 alert alert-primary col-12">
                <div class=" col-12">
                    <% locals.errors.register.forEach(function(error) { %>
                        <h5 class="alert-primary" role="alert"><%= error %></h5>
                    <% }) %>
                </div>
            </div>
        <% } %> 
        
        <form action="/register" method="post">
            <div class="form-group">
                <label>Email address</label>
                <input type="email" name="email" class="form-control" placeholder="Email">
            </div>

        

            <div class="form-group">
                <label>Password</label>
                <input type="password" name="password" class="form-control" placeholder="Password">
            </div>

            <div class="form-group">
                <label>Re-enter Password</label>
                <input type="password" name="passwordConfirm" class="form-control" placeholder="Confirm Password">
            </div>


            

            <a class="btn btn-secondary" href="/">Login</a>
            <button class="btn btn-secondary" type="submit">Sign Up</button>
        </form>

    </div>
</div>

<%- include('partials/footer'); %>