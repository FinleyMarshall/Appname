<%- include('partials/header'); %>
<%- include('partials/nav'); %>


<div class="container p-0 col-12">
    <h5 class="col-12 border">
        User Settings
    </h5>

    <div class="col-12 row p-0">
        <form class="col-md-5 border">
            <div class="form-group">
                <label>Email address</label>
                <input type="email" class="form-control" placeholder="Email" value="<%= locals.user.email %>">
            </div>

            <div class="form-group">
                <label>Username</label>
                <input type="text" class="form-control" placeholder="Username" value="<%= locals.user.displayName %>">
            </div>

            <div>
                <p class="p-0 left">Avatar</p>
                <img src="<%= user.photoURL %>" class="card-img middle" alt="<%= user.photoURL %>" style="width: 33vw; height: 33vw;">
            </div>
        </form>
        <div class="col-md-7 p-0">
            <h5 class="col-12 border">
                Profile Update
            </h5>
            <% if (locals.errors && locals.errors.profile) { %>
                <div class="generic-errors row justify-content-md-center py-0 alert alert-primary col-12">
                    <div class=" col-12">
                        <% locals.errors.profile.forEach(function(error) { %>
                            <h5 class="alert-primary" role="alert"><%= error %></h5>
                        <% }) %>
                    </div>
                </div>
            <% } %>
            <form class="col-12 border" action="/account" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label>New Email address</label>
                    <input class="form-control" type="email" name="email" placeholder="Email"
                        value="<%= locals.user.email %>">
                </div>

                <div class="form-group">
                    <label>New Username</label>
                    <input class="form-control" type="text" name="displayName" placeholder="Username"
                        value="<%= locals.user.displayName %>">
                </div>

                <div class="form-group">
                    <label>Choose a new avatar</label>
                    <input class="form-control" type="file" name="avatar">
                </div>

                <button type="submit" class="btn btn-secondary">Update Profile</button>
            </form>
            <h5 class="col-12 border">
                Password Update
            </h5>
            <% if (locals.errors && locals.errors.password) { %>
                <div class="generic-errors row justify-content-md-center py-0 alert alert-primary col-12">
                    <div class=" col-12">
                        <% locals.errors.password.forEach(function(error) { %>
                            <h5 class="alert-primary" role="alert"><%= error %></h5>
                        <% }) %>
                    </div>
                </div>
            <% } %> 
            <form class="col-12 border" action="/password" method="post">
                <div class="form-group">
                    <label>New Password</label>
                    <input class="form-control" type="password" name="password" placeholder="Password">
                </div>

                <div class="form-group">
                    <label>Confirm New Password </label>
                    <input class="form-control" type="password" name="passwordConfirm" placeholder="Confirm New Password">
                </div>

                <button type="submit" class="btn btn-secondary">Update Password</button>
            </form>
        </div>
    </div>
</div>

<%- include('partials/footer'); %>