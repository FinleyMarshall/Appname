<%- include('partials/header'); %> 
<div class="h-100 d-flex justify-content-center align-items-center bg-dark">
    <div class="login-box p-5 text-center border">
        <i class="fas fa-user-plus fa-2x"></i>
        <h1 class="d-inline-block">Sign Up</h1>
        <form>
            <div class="form-group">
                <label>Email address</label>
                <input type="email" class="form-control"placeholder="name@example.com">
            </div>

            <div class="form-group">
                <label">Username</label>
                <input type="text" class="form-control" placeholder="Username">
            </div>
            
            <div class="form-group">
                <label>Password</label>
                <input type="password" class="form-control" placeholder="Password">
            </div>

            <div class="form-group">
                <label>Re-enter Password</label>
                <input type="password" class="form-control" placeholder="Re-enter Password">
            </div>

            <div class="form-group">
                <label>Choose an avatar</label>
                <div class="custom-file">
                  <input type="file" class="custom-file-input" id="photo">
                  <label class="custom-file-label" for="photo">Choose a file</label>
                </div>
            </div>

            <a class="btn btn-secondary" href="/">Sign Up</a>
            <a type = "button" class="btn btn-secondary" href="/login">Login</a>

        </form>
    </div>
</div>

<%- include('partials/footer'); %>