<%- include('partials/header'); %> 
<div class="h-100 d-flex justify-content-center align-items-center bg-dark">
    <div class="login-box p-5 text-center border">
            <i class="fas fa-sign-in-alt fa-2x"></i>
            <h1 class="d-inline-block"> Login</h1>
        <form action="/login" method="post">
            <div class="form-group">
                <label>Email address</label>
                <input name="email" type="email" class="form-control" placeholder="name@example.com">
            </div>
            
            <div class="form-group">
                <label>Password</label>
                <input name="password" type="password" class="form-control" placeholder="Password">
            </div>
            <button class="btn btn-secondary" type="submit">Login</button>

            <a class="btn btn-secondary" href="register">Sign Up</a>

        </form>
    </div>
</div>

<%- include('partials/footer'); %>